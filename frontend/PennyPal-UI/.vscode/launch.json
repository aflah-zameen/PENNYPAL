  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "ng serve (Brave)",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "http://localhost:4200/",
      "runtimeExecutable": "/usr/bin/brave-browser", // Path to Brave
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "ng test (Brave)",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: test",
      "url": "http://localhost:9876/debug.html",
      "runtimeExecutable": "/usr/bin/brave-browser", // Path to Brave
      "webRoot": "${workspaceFolder}"
    }
  ]
}
